<h1>My Friends</h1>

<div id="friend_requests">
  <h2>Friend Requests</h2>
  <% if @requests %>
    <% @requests.each do |r| %>
      <%= User.find(r.friend_id).full_name %>
      <%= link_to "Accept", accept_friendships_path(f_id: r.friend_id), method: :post %>
      <%= link_to "Reject", reject_friendships_path(f_id: r.friend_id), method: :post %>
    <% end %>
  <% end %>
</div>

<div id="pending_friends">
  <h2>Pending Friends</h2>
  <% if @pending %>
    <% @pending.each do |p| %>
      <%= p.full_name %>
    <% end %>
  <% end %>
</div>